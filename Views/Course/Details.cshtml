@model SchoolApp.ViewModels.CourseDetailsVM

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <div class="row">
        <div class=" col-md-6">
            <h4>Deatils For Course Id: @Model.CourseId </h4>
        </div>
        <div class=" col-md-6">
            <h4> Material: @Html.DisplayFor(modelItem => Model.Course.Material)</h4>
        </div>

    </div>
    <br />
    <h6>Teachers of the course:</h6>
    <table class="table">
        <thead>
            <tr>
                <th>Teacher Id's</th>
                <th>Teacher Names </th>
            </tr>

        </thead>
        <tbody>
            @foreach (var item in Model.TList)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TeacherId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TeacherName)
                    </td>
                </tr>

            }
        </tbody>

    </table>
    <hr />
    <h6>Assignments of the coures: </h6>
    <table class="table">
        <thead>
            <tr>
                <th>Assignment Id's</th>
                <th>Assignment Names </th>
            </tr>

        </thead>
        <tbody>
            @foreach (var item in Model.Alist)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.AssignmentId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                </tr>

            }
        </tbody>

    </table>
    <hr />

    <h6>Registered students: </h6>
    <table class="table">
        <thead>
            <tr>
                <th>Student Id's</th>
                <th>Student Names </th>
            </tr>

        </thead>
        <tbody>
            @foreach (var item in Model.SList)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.StudentId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StudentName)
                    </td>
                </tr>

            }
        </tbody>

    </table>
</div>
