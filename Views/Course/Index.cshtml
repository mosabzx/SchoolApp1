@model IEnumerable<SchoolApp.Models.Course>

@{
    ViewData["Title"] = "Corses Index";
}

<h1>Courses</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               Course Id's   @*@Html.DisplayNameFor(model => model.CourseId)*@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Material)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CourseId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Material)
            </td>
            <td>
                <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.CourseId">Edit</a> |
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.CourseId">Details</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.CourseId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
